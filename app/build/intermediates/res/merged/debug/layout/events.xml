<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke_dk"
    android:orientation="vertical"
    android:padding="5dp">

    <SearchView
        android:id="@+id/searchEvents"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="true"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_filter_monday"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:background="@drawable/actionbar_bg_2"
                android:padding="3dp"
                android:text="Monday"/>

            <Button
                android:id="@+id/button_filter_tuesday"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/actionbar_bg_2"
                android:padding="3dp"
                android:text="Tuesday"/>

            <Button
                android:id="@+id/button_filter_wednesday"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/actionbar_bg_2"
                android:padding="3dp"
                android:text="Wednesday"/>

            <Button
                android:id="@+id/button_filter_thursday"
                android:layout_width="85dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/actionbar_bg_2"
                android:padding="3dp"
                android:text="Thursday"/>

            <Button
                android:id="@+id/button_filter_friday"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/actionbar_bg_2"
                android:padding="3dp"
                android:text="Friday"/>

            <Button
                android:id="@+id/button_filter_saturday"
                android:layout_width="85dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/actionbar_bg_2"
                android:padding="3dp"
                android:text="Saturday"/>

            <Button
                android:id="@+id/button_filter_sunday"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:elevation="0dp"
                android:padding="3dp"
                android:text="Sunday"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button"/>
        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/EventsRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:dividerHeight="@dimen/pad_10dp"
            tools:listitem="@layout/feed_item">

        </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>