<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ss"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/pad_10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/pad_5dp"
                android:paddingRight="@dimen/pad_5dp"
                android:paddingTop="@dimen/pad_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".75"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblTitle"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:text="Milan Fashion Week"
                            android:textColor="@color/adrenaline_red"
                            android:textSize="@dimen/txt_15sp"/>

                        <TextView
                            android:id="@+id/lblAddress"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:clickable="true"
                            android:inputType="textMultiLine|textPostalAddress"
                            android:text="Milan, Via Orefici 7, 20123 Italy"
                            android:textColor="@color/main_color_gray_dk"
                            android:textSize="@dimen/txt_14sp"/>

                        <TextView
                            android:id="@+id/lblAdress2"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".75"
                            android:text="TextView"/>

                        <LinearLayout
                            android:id="@+id/da"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight=".75"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/pad_3dp"
                                android:text="@string/date"
                                android:textColor="@color/adrenaline_red"
                                android:textSize="@dimen/txt_14sp"/>

                            <TextView
                                android:id="@+id/lblDate"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine|datetime"
                                android:lines="2"
                                android:text="12/23/13   12:00AM - 3:00PM  "
                                android:textColor="@color/main_color_gray_dk"
                                android:textSize="@dimen/txt_14sp"/>

                            <TextView
                                android:id="@+id/lblDate2"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:text="TextView"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight=".25"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/distance_event"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight=".5"
                            android:gravity="right"
                            android:paddingRight="1dp"
                            android:text="14"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight=".5"
                            android:inputType="text"
                            android:text="Mi"
                            android:textSize="20sp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:lines="1"
                android:text="@string/dots"
                android:textColor="@color/main_color_gray"
                android:textSize="@dimen/txt_15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/pad_5dp"
                android:paddingLeft="@dimen/pad_10dp"
                android:paddingRight="@dimen/pad_10dp"
                android:paddingTop="@dimen/pad_5dp"
                android:text="@string/description"
                android:textColor="@color/adrenaline_red"
                android:textSize="@dimen/txt_15sp"/>

            <TextView
                android:id="@+id/lblDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="all"
                android:background="@color/white"
                android:inputType="textMultiLine"
                android:linksClickable="true"
                android:paddingBottom="@dimen/pad_10dp"
                android:paddingLeft="@dimen/pad_10dp"
                android:paddingRight="@dimen/pad_10dp"
                android:text="Milan, Via Orefici 7, 20123 Italy"
                android:textColor="@color/main_color_gray_dk"
                android:textSize="@dimen/txt_14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/pad_10dp"
                android:layout_marginTop="@dimen/pad_10dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imgShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    />

                <Button
                    android:id="@+id/btnReg"
                    style="@style/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:background="@drawable/reg_btn_bg"
                    android:text="@string/reg_now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_18sp"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
