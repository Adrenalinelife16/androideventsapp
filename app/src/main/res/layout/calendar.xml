<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_color_gray_lt"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/vTabsC"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/actionbar_bg_6solid"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            style="@style/tab_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/my_cal"/>

        <View
            android:id="@+id/view"
            style="@style/tab_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/favButton"
            style="@style/tab_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/my_fav"/>

        <View
            android:id="@+id/view2"
            style="@style/tab_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/attendButton"
            style="@style/tab_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/my_tkcts" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/pad_10dp"
        android:paddingRight="@dimen/pad_10dp">

        <RelativeLayout
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/pad_10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/arrow_left"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/main_color_gray_dk"
            android:textSize="@dimen/txt_16sp"/>

        <RelativeLayout
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/pad_10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/arrow_right"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pad_5dp"
        android:paddingLeft="@dimen/pad_10dp"
        android:paddingRight="@dimen/pad_10dp"
        android:paddingTop="@dimen/pad_5dp"
        android:weightSum="7">

        <TextView
            android:id="@+id/textView1"
            style="@style/lbl_cal_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S"/>

        <TextView
            android:id="@id/textView1"
            style="@style/lbl_cal_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"/>

        <TextView
            android:id="@id/textView1"
            style="@style/lbl_cal_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T"/>

        <TextView
            android:id="@id/textView1"
            style="@style/lbl_cal_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="W"/>

        <TextView
            android:id="@id/textView1"
            style="@style/lbl_cal_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="T"/>

        <TextView
            android:id="@id/textView1"
            style="@style/lbl_cal_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="F"/>

        <TextView
            android:id="@id/textView1"
            style="@style/lbl_cal_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_gravity="center_horizontal"
        android:horizontalSpacing="@dimen/pad_1dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="7"
        android:paddingLeft="@dimen/pad_10dp"
        android:paddingRight="@dimen/pad_10dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/pad_1dp"
        tools:listitem="@layout/calendar_item"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/pad_10dp"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:dividerHeight="@dimen/pad_10dp"
        tools:listitem="@layout/feed_item">

    </ListView>

</LinearLayout>