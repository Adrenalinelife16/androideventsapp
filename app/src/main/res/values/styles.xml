<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="btn" parent="android:Widget.Holo.Light.Button">
        <item name="android:minHeight">1dp</item>
        <item name="android:minWidth">1dp</item>
    </style>

    <style name="ToastGrey">
        <item name="android:textColor">@color/white_smoke</item>
        <item name="android:colorBackground">@color/adrenaline_grey</item>
    </style>

    <style name="ToastGranted">
        <item name="android:textColor">@color/white_smoke</item>
        <item name="android:colorBackground">@color/adrenaline_green</item>
    </style>

    <style name="ToastDenied">
        <item name="android:textColor">@color/white_smoke</item>
        <item name="android:colorBackground">@color/adrenaline_red</item>
    </style>
    
     <style name="tab_btn" parent="@style/btn">
        <item name="android:background">@drawable/btn_tab</item>
        <item name="android:textColor">@color/tab_color</item>
        <item name="android:textSize">@dimen/txt_13sp</item>
        <item name="android:paddingBottom">@dimen/pad_5dp</item>
    </style>

    <style name="tab_filter" parent="@style/filter">
        <item name="android:textColor">@color/tab_color</item>
        <item name="android:textSize">@dimen/txt_13sp</item>
        <item name="android:paddingBottom">@dimen/pad_5dp</item>
    </style>

    <style name="tab_divider">
        <item name="android:background">@color/gray_light</item>
        <item name="android:layout_marginBottom">@dimen/pad_10dp</item>
        <item name="android:layout_marginTop">@dimen/pad_10dp</item>
    </style>

    <style name="lbl_cal_day" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/adrenaline_red</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
    </style>
    <style name="lbl_more1" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingBottom">@dimen/pad_10dp</item>
        <item name="android:paddingLeft">@dimen/pad_15dp</item>
        <item name="android:paddingTop">@dimen/pad_10dp</item>
        <item name="android:textColor">@color/adrenaline_red</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>
    <style name="lbl_more2" parent="@style/lbl_more1">
        <item name="android:textColor">@color/main_color_gray_dk</item>
    </style>
    <style name="btn_orange" parent="@style/btn">
        <item name="android:background">@color/adrenaline_red</item>
        <item name="android:padding">@dimen/pad_8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>
    <style name="txt_orange" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/white_rect</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:padding">@dimen/pad_8dp</item>
        <item name="android:textColor">@color/main_color_gray_dk</item>
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

    <style name="filter">day_filter</style>
</resources>